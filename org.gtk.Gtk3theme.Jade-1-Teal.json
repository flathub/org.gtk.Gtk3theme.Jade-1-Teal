               "sha256":"02237a20ec2d248d56d3c28029673f240b702546d5a89a6de6e95b283dca449f"
            }
         ]
      },
      {
         "name":"appdata",
         "buildsystem":"simple",
         "build-commands":[
            "mkdir -p ${FLATPAK_DEST}/share/appdata",
            "cp org.gtk.Gtk3theme.Jade-1-Teal.metainfo.xml ${FLATPAK_DEST}/share/appdata",
            "appstream-compose --basename=org.gtk.Gtk3theme.Jade-1-Teal --prefix=${FLATPAK_DEST} --origin=flatpak org.gtk.Gtk3theme.Jade-1-Teal"
         ],
         "sources":[
